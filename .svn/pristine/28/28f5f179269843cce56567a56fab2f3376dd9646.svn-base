<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ScrollIni"
    android:layout_gravity="left|center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="@drawable/logo_black_trans"
    android:foregroundGravity="center_vertical|center_horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <include
            android:id="@+id/headerQDS"
            layout="@layout/header_listado_pqr"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutppal">


            <TextView android:text="@string/queesgov"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textSize="25dp"
                android:textIsSelectable="true"></TextView>

            <TextView android:text="@string/descripcion"
                android:layout_height="fill_parent"
                android:layout_width="374dp"
                android:textSize="20dp"
                android:layout_gravity="center"></TextView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
