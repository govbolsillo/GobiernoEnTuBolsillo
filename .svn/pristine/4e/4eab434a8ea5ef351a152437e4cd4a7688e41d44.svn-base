<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ScrollIni"
    android:layout_gravity="left|center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <include
            android:id="@+id/headerListado"
            layout="@layout/headericonos"
            android:layout_width="fill_parent" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/labelSolicitudes"
            android:id="@+id/labelSolicitudes"
            style="@style/textoEncabezado"
            android:layout_gravity="center"
            android:background="@drawable/botoningresar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/lyMisPqr"></LinearLayout>

    </LinearLayout>
</ScrollView>
