<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <gradient android:type="radial"
                android:gradientRadius="180"
                android:startColor="@color/fondo1MisPqr"
                android:endColor="@color/fondo2MisPqr"/>
            <stroke
                android:width="1dp"
                android:color="@color/bordeBoton" />
            <corners
                android:topLeftRadius="50dp"
                android:bottomLeftRadius="50dp"
                android:topRightRadius="50dp"
                android:bottomRightRadius="50dp"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:type="radial"
                android:gradientRadius="180"
                android:startColor="@color/fondo2MisPqr"
                android:endColor="@color/fondo1MisPqr"/>
            <stroke
                android:width="1dp"
                android:color="@color/bordeBoton" />
            <corners
                android:topLeftRadius="50dp"
                android:bottomLeftRadius="50dp"
                android:topRightRadius="50dp"
                android:bottomRightRadius="50dp"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>