<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ScrollIni"
    android:layout_gravity="left|center_vertical"
    android:background="@color/blanco"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutContenido"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context=".MainActivity" >

        <include
            android:id="@+id/header"
            layout="@layout/headericonos"
            android:layout_width="fill_parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btnBorrarDatos"
            android:text="Borrar Datos"
            android:layout_gravity="right"
            style="@style/textoEncabezado"
            android:background="@drawable/boton_simple_forma"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelTipoId"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/spTipoDoc"
            style="?android:attr/spinnerDropDownItemStyle"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelNumId"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="number"
            android:id="@+id/txtNumId"
            android:background="@drawable/cuadrotexto"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelNombre"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:id="@+id/txtNombre"
            android:background="@drawable/cuadrotexto"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelApellido"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:id="@+id/txtApellido"
            android:background="@drawable/cuadrotexto"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelEmail"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"
            android:id="@+id/txtEmail"
            android:background="@drawable/cuadrotexto"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelTelefono"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="phone"
            android:id="@+id/txtTel"
            android:background="@drawable/cuadrotexto"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelDireccion"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:id="@+id/txtDir"
            android:background="@drawable/cuadrotexto"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelCiudad"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:id="@+id/txtCiudad"
            android:text="@string/ciudad"
            android:background="@drawable/cuadrotexto"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/btn_ingresar"
            android:id="@+id/btnIngresar"
            style="@style/textoEncabezado"
            android:background="@drawable/botoningresar"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
