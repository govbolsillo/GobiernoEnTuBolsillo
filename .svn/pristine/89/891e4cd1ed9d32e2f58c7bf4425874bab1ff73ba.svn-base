<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ScrollIni"
    android:layout_gravity="left|center_vertical"
    android:background="@color/blanco"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutContenido"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <include
            android:id="@+id/header"
            layout="@layout/headericonos"
            android:layout_width="fill_parent" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblAdjuntarFoto"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnFoto"
                android:layout_marginRight="10dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/camara"
                android:background="@drawable/botones_adjuntar"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCarpeta1"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/carpeta"
                android:background="@drawable/botones_adjuntar"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/adjuntoFoto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text=""
                android:layout_gravity="center_vertical"
                android:id="@+id/lblFoto" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblAdjuntarVideo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnVideo"
                android:layout_marginRight="10dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/video"
                android:background="@drawable/botones_adjuntar"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCarpeta2"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/carpeta"
                android:background="@drawable/botones_adjuntar"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/adjuntoVideo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text=""
                android:layout_gravity="center_vertical"
                android:id="@+id/lblVideo" />

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/txt_resumen"
            android:id="@+id/btnRegistrar"
            style="@style/textoEncabezado"
            android:background="@drawable/botoningresar"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
