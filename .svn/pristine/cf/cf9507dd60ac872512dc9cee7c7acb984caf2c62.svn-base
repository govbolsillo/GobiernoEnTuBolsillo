<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/footer">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMisPqr"
            android:text="@string/textofooter1"
            android:drawableLeft="@drawable/seguimiento"
            android:layout_weight="1"
            style="@style/textoEncabezado"
            android:textSize="18dp"
            android:background="@drawable/botoningresar"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcercaDe"
            android:drawableLeft="@drawable/acerca"
            android:text="@string/textofooter2"
            android:textSize="18dp"
            android:layout_weight="1"
            style="@style/textoEncabezado"
            android:background="@drawable/botoningresar"/>
    </LinearLayout>

</LinearLayout>