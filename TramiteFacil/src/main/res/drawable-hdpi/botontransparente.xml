<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >	
    	<shape android:shape="rectangle">
			<gradient android:type="radial" 
			    android:gradientRadius="150"
                android:startColor="@color/bar_theme_released_end" 
                android:endColor="@color/bar_theme_released_start"/>	
			<padding android:left="7dp"
				android:top="0dp"
				android:right="7dp"
				android:bottom="0dp" />
			<corners
			    	android:radius="5dp"/>
		</shape>
	</item>    
    <item>
        <shape>
            <solid 
                android:color="@color/transparente"/>
            <stroke
                android:width="1dp"
                android:color="#000000" />            
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
			<corners android:radius="5dp" />            
        </shape>
    </item>		   
</selector>